<h1>Lista przedmiotów</h1>

<table>
  <tr>
    <th>Rok</th>
    <th>Przedmiot</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @przedmioty.each do |przedmiot| %>
  <tr>
    <td><%= przedmiot.rok.rok %></td>
    <td><%= przedmiot.przedmiot %></td>
    <td><%= link_to 'Pokaż', przedmiot %></td>
    <td><%= link_to 'Edytuj', edit_przedmiot_path(przedmiot) %></td>
    <td><%= link_to 'Usuń', przedmiot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

